# Provider Configuration for GitHub Copilot All-in-One Demo
# AWS Provider version: ~> 5.0 (latest stable version as of 2024)

terraform {
  required_version = ">= 1.6.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = var.common_tags
  }
}
